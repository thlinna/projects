# --- Database Configuration ---
# DATABASE_TYPE=sqlite # Currently only sqlite is implemented
SQLITE_DB_PATH=data/proposal_generator.db # Path relative to project root

# --- LLM Configuration ---
# Set the default provider and model, or override per agent
# Supported providers:
# "openai", "anthropic", "google", "ollama", "openrouter", "placeholder"
LLM_PROVIDER_DEFAULT=placeholder
LLM_MODEL_DEFAULT=placeholder-model

# Example Overrides (Optional)
# LLM_PROVIDER_IDEATOR=openai
# LLM_MODEL_IDEATOR=gpt-4-turbo-preview
# LLM_PROVIDER_WRITER=anthropic
# LLM_MODEL_WRITER=claude-3-opus-20240229
# LLM_PROVIDER_JUDGE=openrouter
# LLM_MODEL_JUDGE=nousresearch/nous-capybara-7b # Example OpenRouter model

# --- API Keys (REQUIRED if using cloud providers or OpenRouter) ---
# OPENAI_API_KEY="your-openai-api-key"
# ANTHROPIC_API_KEY="your-anthropic-api-key"
# GOOGLE_API_KEY="your-google-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"

# --- Ollama Configuration (If using ollama provider) ---
# OLLAMA_BASE_URL=http://localhost:11434 # Default if not set

# --- Application Settings ---
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
MAX_ITERATIONS=10 # Max iterations for proposal refinement loop